extends ./../layout

block content

  form(method="POST" action="/gallery" enctype="application/x-www-form-urlencoded")#form1
    input(type="hidden" name="_method" value="PUT")
    p author:
      input(type='text' name="author" value="#{photo.author}")
    br
    p link:
      input(type='text' name="link" value="#{photo.link}")
    br
    p description:
      input(type='text' name="description" value="#{photo.description}")
    br
    button(type="submit" form="form1" value="Submit")#submit Submit